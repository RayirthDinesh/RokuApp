<!-- ElevensGame.xml -->
<component name="ElevensGame" extends="Scene">
    <children>
        <Group id="board">
            <GridLayout rows="3" columns="3">
                <children>
                    <Poster id="card00" focusBitmapUri="pkg:/images/focus.png" selectedBitmapUri="pkg:/images/selected.png"/>
                    <Poster id="card01" focusBitmapUri="pkg:/images/focus.png" selectedBitmapUri="pkg:/images/selected.png"/>
                    <Poster id="card02" focusBitmapUri="pkg:/images/focus.png" selectedBitmapUri="pkg:/images/selected.png"/>
                    <Poster id="card10" focusBitmapUri="pkg:/images/focus.png" selectedBitmapUri="pkg:/images/selected.png"/>
                    <Poster id="card11" focusBitmapUri="pkg:/images/focus.png" selectedBitmapUri="pkg:/images/selected.png"/>
                    <Poster id="card12" focusBitmapUri="pkg:/images/focus.png" selectedBitmapUri="pkg:/images/selected.png"/>
                    <Poster id="card20" focusBitmapUri="pkg:/images/focus.png" selectedBitmapUri="pkg:/images/selected.png"/>
                    <Poster id="card21" focusBitmapUri="pkg:/images/focus.png" selectedBitmapUri="pkg:/images/selected.png"/>
                    <Poster id="card22" focusBitmapUri="pkg:/images/focus.png" selectedBitmapUri="pkg:/images/selected.png"/>
                </children>
            </GridLayout>
        </Group>
        <Button id="ok" text="OK" translation="[900, 600]" width="100" height="50"/>

        <Poster     
        id="cards" 
        uri="pkg:/images/Diagonal1.png"
        visible="false"
        translation="[600, 200]"
        width="700"
        height="700"
        />

        <button     
        id="selectedCards" 
        focusedIconUri="pkg:/images/whiteX.jpg"
        visible="false"
        translation="[600, 200]"
        width="700"
        height="700"
        />

        <Poster     
        id="board" 
        uri="pkg:/images/Diagonal1.png"
        visible="false"
        translation="[600, 200]"
        width="700"
        height="700"
        />

    </children>
</component>
