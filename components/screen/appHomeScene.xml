<?xml version="1.0" encoding="utf-8" ?>
<component name="appHomeScene" extends="Group" initialFocus="tiktok">
<script type="text/brightscript" uri="pkg:/components/screen/appHomeScene.brs"/>

    <interface>
        <field id="tictactoe_button"
            type="node"
            alias="tiktok.buttonSelected"
        />
        <field id="elevens_button"
            type="node"
            alias="elevens.buttonSelected"
        />
        <field id ="flappybird_button"
            type = "node"
            alias="flappy.buttonSelected"
        />
    </interface>

    <children>
        <Label
            id="PickGameLabel"
            text="Pick Games To Play"
            color="0xff0000ff"
            translation = "[715, 100]"
            font="font:LargeBoldSystemFont"
            horizAlign = "center"
            vertAlign = "center"
            />
        <Label
            id="TictactoeLabel"
            text="Tic Tac Toe"
            color="0xff0000ff"
            translation = "[550, 250]"
            />
        <Label
            id="ElevensLabel"
            text="Elevens"
            color="0xff0000ff"
            translation = "[1170, 250]"
            />

        <Label
            id="flappybirdLabel"
            text="Flappy Bird"
            color="0xff0000ff"
            translation = "[840, 660]"
            />    
        
        <Button
            id="tiktok"
            translation = "[458, 465]"
            minWidth="1"
            maxWidth="1"
            height="1"
            iconUri="pkg:/images/Tictactoe.png"
            focusedIconUri="pkg:/images/Tictactoe.png"
            showFocusFootprint="true"
        />

        <Button
            id="elevens"
            translation = "[1048, 465]"
            minWidth="1"
            maxWidth="1"
            height="1"
            iconUri="pkg:/images/ElevensIcon.png"
            focusedIconUri="pkg:/images/ElevensIcon.png"
            focusFootprintBitmapUri="pkg:/images/ElevensIcon.png"
            showFocusFootprint="true"
        />

        <Button
            id="flappy"
            translation = "[755, 875]"
            minWidth="1"
            maxWidth="1"
            height="1"
            iconUri="pkg:/images/FlappyBirdIcon.png"
            focusedIconUri="pkg:/images/FlappyBirdIcon.png"
            showFocusFootprint="true"
        />    

    </children>
</component>